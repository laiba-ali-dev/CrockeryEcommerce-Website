@model ecommerce.Models.Products
@{
    ViewData["Title"] = "DeleteProducts";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}

<div class="main-panel">
    <div class="content">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow">
                        <div class="card-header">
                            <h4 class="card-title text-center text-danger">Delete Insurance</h4>
                        </div>
                        <div class="card-body">
                            <h5 class="text-center text-danger">Are you sure you want to delete this?</h5>
                            <dl class="row mt-4">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Name)</dd>

                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Description)</dd>

                                <dt class="col-sm-4">Price</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Price)</dd>

                                <dt class="col-sm-4">Stock</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Stock)</dd>

                                <dt class="col-sm-4">Category</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(Model => Model.Category)</dd>

                                <dt class="col-sm-4">CreateDate</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(Model => Model.CreateDate)</dd>

                                <dt class="col-sm-4" >Image</dt>
                                <img src="~/images/@Html.DisplayFor(modelItem => Model.ImagePath)" style="width:100px;height:100px;border:1px solid;border-color:black" />

                               


                            </dl>
                            <form asp-action="DeleteProducts" class="mt-4">
                                <input type="hidden" asp-for="ProductId" />
                                <div class="d-flex justify-content-center">
                                    <input type="submit" value="Delete" class="btn btn-danger mx-2" />
                                    <a asp-action="ProductsIndex" class="btn btn-secondary mx-2">Back to List</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

